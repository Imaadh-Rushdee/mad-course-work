<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Pizzamaniaapp.Light">

        <!-- Google Maps API key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCldldEy5A5sk7K3-RkyHhoCH86XeToP8s" />

        <activity
            android:name=".helperClasses.SelectLocationActivity"
            android:exported="false"
            android:label="@string/title_activity_select_location" />
        <activity
            android:name=".OrderSetupActivity"
            android:exported="false" />
        <activity
            android:name=".deliveryPartner.orderDetailsMaps"
            android:exported="false"
            android:label="@string/title_activity_order_details_maps" />
        <activity
            android:name=".deliveryPartner.ongoingOrderMaps"
            android:exported="false"
            android:label="@string/title_activity_ongoing_order_maps" />
        <activity
            android:name=".profile"
            android:exported="false" />

        <!-- Admin Activities -->
        <activity
            android:name=".admin.ItemAdapter"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".admin.ManageItemsActivity"
            android:exported="false" />
        <activity
            android:name=".admin.Item"
            android:exported="false"
            tools:ignore="Instantiatable,MissingClass" />
        <activity
            android:name=".admin.ManageCustomersActivity"
            android:exported="false" />
        <activity
            android:name=".admin.ManageOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".admin.ManageStaffActivity"
            android:exported="false" />
        <activity
            android:name=".admin.ManageTransactionsActivity"
            android:exported="false" />
        <activity
            android:name=".admin.ViewStaffActivity"
            android:exported="false" />
        <activity
            android:name=".admin.transactions"
            android:exported="false" />
        <activity
            android:name=".admin.AdminDashboardActivity"
            android:exported="false"
            tools:ignore="MissingClass" />

        <!-- Customer Activities -->
        <activity
            android:name=".customer.orderInvoice"
            android:exported="false" />
        <activity
            android:name=".customer.orderTracking"
            android:exported="false" />
        <activity
            android:name=".customer.confirmOrder"
            android:exported="false" />
        <activity
            android:name=".customer.cart"
            android:exported="false" />

        <activity
            android:name=".menu"
            android:exported="false" />
        <activity
            android:name=".signUp"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".loginPage"
            android:exported="false" />

        <!-- Delivery Partner Activities -->
        <activity
            android:name=".deliveryPartner.orderPayment"
            android:exported="false" />
        <activity
            android:name=".deliveryPartner.deliveryPartnerDashboard"
            android:exported="false" />

        <!-- Welcome (Launcher) Activity -->
        <activity
            android:name=".welcomePage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
