<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Staff ID -->
    <EditText
        android:id="@+id/etStaffId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff ID"
        android:inputType="number"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"/>

    <!-- Staff Name -->
    <EditText
        android:id="@+id/etStaffName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff Name"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"/>

    <!-- Staff Role -->
    <EditText
        android:id="@+id/etStaffRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Staff Role"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_bg"/>

    <!-- Buttons Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:weightSum="3">

        <Button
            android:id="@+id/btnAddStaff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>

        <Button
            android:id="@+id/btnUpdateStaff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>

        <Button
            android:id="@+id/btnDeleteStaff"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:padding="14dp"/>
    </LinearLayout>

    <!-- View Staff Button -->
    <Button
        android:id="@+id/btnViewStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Staff"
        android:backgroundTint="#1976D2"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"
        android:padding="14dp"/>

    <!-- Staff List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staff List"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <ListView
        android:id="@+id/lvStaff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#BDBDBD"
        android:dividerHeight="1dp"
        android:background="@android:color/white"/>
</LinearLayout>
