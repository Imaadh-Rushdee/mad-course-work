<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent">

    <!-- App Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10px">

        <!-- App Logo on the left -->
        <ImageView
            android:id="@+id/logoImg"
            android:layout_width="100px"
            android:layout_height="100px"
            android:contentDescription="app-logo"
            android:src="@drawable/logo" />

        <!-- Text in the middle -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/beachday"
            android:gravity="center"
            android:text="Pizza Mania"
            android:textColor="#FFFFFF"
            android:textSize="80px" /> <!-- custom font -->

        <!-- Profile Icon on the right -->
        <ImageButton
            android:id="@+id/profileImg"
            android:layout_width="100px"
            android:layout_height="100px"
            android:background="@null"
            android:contentDescription="Profile"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />
    </LinearLayout>

    <!-- Order Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Order ID: "
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="020"
                android:textStyle="bold"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:id="@+id/txtCustomerName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Customer Name: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/customerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Cena"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:id="@+id/txtOrderItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cart: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/orderItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sausage Piazza(2)"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Address: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colombo, Mount Lavinia, No 63"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Amount: "
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/totalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 5000"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="15dp"/>

    <!-- Distance and ETA -->
    <TextView
        android:id="@+id/txtDistanceTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Distance ETA will appear here"
        android:textSize="16sp"
        android:padding="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/backToHome"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#B71C1C"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/acceptOrder"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:backgroundTint="#388E3C"
            android:textColor="@color/white"
            android:layout_marginLeft="30px"
            />
    </LinearLayout>
</LinearLayout>
