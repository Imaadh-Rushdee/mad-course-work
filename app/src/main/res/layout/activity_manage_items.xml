<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F3F4F6">

    <!-- Item ID (for search/update by ID) -->
    <EditText
        android:id="@+id/etItemId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item ID"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_bg"/>

    <!-- Item Name -->
    <EditText
        android:id="@+id/etItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_bg"/>

    <!-- Item Price -->
    <EditText
        android:id="@+id/etItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Price"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"/>

    <!-- Buttons Row 1 (Add + Read) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnAddItem"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Add"
            android:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/btnReadItem"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Read All"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <!-- Buttons Row 2 (Update + Delete) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnUpdateItem"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Update"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/btnDeleteItem"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Delete"
            android:backgroundTint="#F44336"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <!-- Buttons Row 3 (Search) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnSearchById"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Search by ID"
            android:backgroundTint="#9C27B0"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="5dp"/>

        <Button
            android:id="@+id/btnSearchByName"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Search by Name"
            android:backgroundTint="#009688"
            android:textColor="#FFFFFF"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:padding="8dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:scrollbars="vertical"/>
</LinearLayout>
