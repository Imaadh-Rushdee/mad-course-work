<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Navigation Panel (Hidden by default) -->
    <LinearLayout
        android:id="@+id/navigationPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/nextInstructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading directions..."
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/distanceToInstructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Map Fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Status Information -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Preparing for delivery..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance: Calculating..."
            android:textSize="16sp"
            android:gravity="center"
            android:padding="4dp" />

        <TextView
            android:id="@+id/etaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ETA: Calculating..."
            android:textSize="16sp"
            android:gravity="center"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Order Status Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:background="#F5F5F5">

        <!-- Ready Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/readyButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/btn_default"
                android:scaleType="fitCenter"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Completed Status -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/completedButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:drawable/btn_default"
                android:scaleType="fitCenter"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>