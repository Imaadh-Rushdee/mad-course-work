<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <EditText
        android:id="@+id/etOrderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Order ID"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_bg"/>

    <EditText
        android:id="@+id/etOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Order Status"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edittext_bg"/>

    <Button
        android:id="@+id/btnAddOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Order"
        android:backgroundTint="#FF5722"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

    <Button
        android:id="@+id/btnUpdateOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Order"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:padding="14dp"/>

    <Button
        android:id="@+id/btnDeleteOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Order"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:padding="14dp"/>
</LinearLayout>
